SELECT L.NAME, I.DESCRIPTION
FROM ISSUESLISTS L
JOIN ISSUES I ON L.ID = I.ISSUESLISTS_ID;

SELECT I.DESCRIPTION, U.FIRSTNAME, U.LASTNAME
FROM USERS U
JOIN ISSUES I ON U.ID = I.USER_ID_ASSIGNEDTO;

SELECT U.FIRSTNAME, U.LASTNAME, COUNT(*) AS ISSUES_NUMBER
FROM USERS U JOIN ISSUES I ON U.ID = USER_ID_ASSIGNEDTO
GROUP BY I.USER_ID_ASSIGNEDTO;
